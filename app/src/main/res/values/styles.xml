<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/MyPopListViewStyle</item>
        <!--<item name="popupMenuStyle">@style/MyPopupMenu</item>-->
    </style>


    <style name="dialogStyle" parent="android:Animation">
        <!--进入时动画-->
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <!--退出时动画-->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!--popmenu背景色-->
    <!--<style name="MyPopupMenu" >-->
        <!--<item name="android:popupBackground">#50f500</item>-->
    <!--</style>-->

    <!--popmenu分割线-->
    <style name="MyPopListViewStyle">
        <item name="android:divider">#c1c1c1</item>
        <item name="android:dividerHeight">1px</item>
    </style>
</resources>
